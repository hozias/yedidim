
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @{
        YedideyChabad.Code.HebrewDate date = new YedideyChabad.Code.HebrewDate();        
    }
</head>
<body>
    <header>
        <div class="login-panel">
            
            <section class="date">
                @date.JewishDate
            </section>
            <section id="login">
                @Html.Partial("_LoginPartial")
            </section>
        </div>
        <div class="main-site-navigation">
            @Html.Partial("_Layout-Menu")


            @using (Html.BeginForm())
            { 
                <div class="search-bar">
                    <a href="" onclick="return false" style="opacity:0.3;padding: 0 9px;">נקה</a>
                    @Html.TextBox("searchId", ViewBag.CurrentFilter as string, new {@disabled = "disabled" })
                    <input type="submit" value="חיפוש" disabled="disabled" />
                </div>
            }   


        </div>
    </header>


    <table class="main-layout-table">
        <tr>
            <td id="main">
                @RenderBody()                    
            </td>
        </tr>
    </table>


    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year</p>
            </div>
        </div>
    </footer>



@*<div id="dialog-confirm" title="?למחוק חבר">
    <p><span class="icon-alert"></span>This user will be permanently deleted and cannot be recovered. Are you sure?</p>
</div>*@


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/bundles/mybundle")
</body>
</html>
